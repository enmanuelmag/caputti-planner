---
interface Props {
  title: string;
}

const { title = 'Caputi Festiva' } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="title" content={title} />
<meta
  name="description"
  content="Liss Caputti. Organizadora de bodas y eventos"
/>
<meta
  name="keywords"
  content="Liss Caputti, Bodas, Eventos, Organizadora, Caputi Festiva"
/>
<meta name="robots" content="index, follow" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="language" content="Spanish" />
<meta name="author" content="Enmanuel Magallanes Pinargote" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://metatags.io/" />
<meta property="og:title" content="Caputi Festiva" />
<meta
  property="og:description"
  content="Liss Caputti. Organizadora de bodas y eventos"
/>
<meta property="og:image" content="/logoImage.png" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://metatags.io/" />
<meta property="twitter:title" content="Caputi Festiva" />
<meta
  property="twitter:description"
  content="Liss Caputti. Organizadora de bodas y eventos"
/>
<meta property="twitter:image" content="/logoImage.png" />

<link rel="icon" href="/logoImage.ico" />

<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<title>{title}</title>
