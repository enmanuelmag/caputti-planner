---
import { getLangFromUrl, useTranslations } from '@i18n/utils';

import InstagramSvg from '@assets/icons/instagram.svg';
import WhatsAppSvg from '@assets/icons/whatsapp.svg';
import EmailSvg from '@assets/icons/email.svg';

import TransText from './TransText.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="h-[200px] mt-16">
  <div
    class="flex flex-row items-center bg-white h-[150px] px-4 md:px-16 lg:px-32 xl:px-72"
  >
    <div
      class="basis-1/3 flex flex-col items-center justify-center h-full border-r-2 border-black"
    >
      <label class="font-cinzel text-lg xl:text-2xl text-center">EMAIL</label>
      <TransText
        tag="a"
        href={`mailto:${t('email')}`}
        textId="email"
        class="font-krub text-xl hover:text-teal-600 transition-all duration-300"
      />
    </div>

    <div class="basis-1/3 flex flex-col items-center justify-center h-full">
      <label class="font-cinzel text-lg xl:text-2xl text-center"
        >TELÃ‰FONO / WHATSAPP</label
      >
      <TransText
        tag="a"
        target="_blank"
        rel="noopener noreferrer"
        href={`https://wa.me/${t('phoneNumber')}?text=${encodeURI(t('phoneText'))}`}
        textId="phone"
        class="font-krub text-xl hover:text-teal-600 transition-all duration-300"
      />
    </div>

    <div
      class="basis-1/3 flex flex-col items-center justify-center h-full border-l-2 border-black"
    >
      <label class="font-cinzel text-lg xl:text-2xl text-center"
        >REDES SOCIALES</label
      >
      <div class="flex flex-row items-center justify-center !gap-x-8">
        <a
          href="https://www.instagram.com/caputifesta"
          target="_blank"
          rel="noopener noreferrer"
          class="cursor-pointer"
          title="Instagram"
        >
          <InstagramSvg
            height={32}
            width={32}
            class="cursor-pointer hover:stroke-teal-600 transition-all duration-300"
          />
        </a>
        <a
          href={`https://wa.me/${t('phoneNumber')}?text=${encodeURI(t('phoneText'))}`}
          target="_blank"
          rel="noopener noreferrer"
          title="WhatsApp"
        >
          <WhatsAppSvg
            height={32}
            width={32}
            class="cursor-pointer hover:stroke-teal-600 transition-all duration-300"
          />
        </a>
        <a
          href={`mailto:${t('email')}`}
          target="_blank"
          rel="noopener noreferrer"
          title="Email"
        >
          <EmailSvg
            height={32}
            width={32}
            class="cursor-pointer hover:stroke-teal-600 transition-all duration-300"
          />
        </a>
      </div>
    </div>
  </div>
</div>
