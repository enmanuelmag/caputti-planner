---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  body: string;
  image: ImageMetadata;
  href: string;
}

const { href, title, body, image } = Astro.props;
---

<article class="flex flex-col basis-[20%] !gap-0">
  <Image src={image} alt={title} />

  <a
    href={href}
    class="border-4 border-t-0 border-cyan-500 py-8 flex flex-col !gap-y-4"
  >
    <h2 class="text-center">
      {title}
    </h2>
    <p class="text-center">
      {body}
    </p>
  </a>
</article>
