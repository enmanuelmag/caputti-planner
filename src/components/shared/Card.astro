---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  body: string;
  image: ImageMetadata;
  href: string;
}

const { href, title, body, image } = Astro.props;
---

<article
  class="w-full md:w-[calc(50%-20px)] xl:w-[calc(20%-20px)] flex flex-col !gap-0 cursor-pointer overflow-hidden group min-h-[425px]"
>
  <a href={href} class="h-full relative flex flex-col !gap-0">
    <Image
      src={image}
      alt={title}
      class="flex-shrink-0 object-cover w-full h-[250px] transition-transform duration-500 group-hover:scale-[115%]"
    />

    <div
      class="h-full border-4 border-t-0 border-teal-500 py-8 flex flex-col !gap-y-4 z-20 bg-white px-4"
    >
      <h2
        class="text-center group-hover:text-teal-600 transition-colors duration-500"
      >
        {title}
      </h2>
      <p class="text-center">
        {body}
      </p>
    </div>
  </a>
</article>
