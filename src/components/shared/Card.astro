---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  body: string;
  image: ImageMetadata;
  href: string;
}

const { href, title, body, image } = Astro.props;
//md:w-[calc(50%-20px)] xl:w-[calc(20%-20px)] min-h-[425px]
---

<article
  class="w-full flex flex-col !gap-0 cursor-pointer overflow-hidden group rounded-xl shadow-lg service-card" 
>
  <a href={href} class="h-full relative flex flex-col !gap-0 rounded-xl">
    <Image
      src={image}
      alt={title}
      class="flex-shrink-0 object-cover w-full h-[250px] transition-transform duration-500 group-hover:scale-[115%]"
    />

    <div
      class="h-full border-4 border-t-0 border-teal-500 py-8 flex flex-col !gap-y-4 z-20 bg-white px-4 rounded-b-xl"
    >
      <h2
        class="text-center group-hover:text-teal-600 transition-colors duration-500 sm:text-base md:text-lg lg:text-xl"
      >
        {title}
      </h2>
      <p class="text-center text-sm sm:text-sm md:text-sm lg:text-base">
        {body}
      </p>
    </div>
  </a>
</article>

<style lang="scss">
@media (min-width: 1000px) {
  .service-card {
    flex-basis: calc(100% - 20px);
  }
}

@media (min-width: 1280px){
  .service-card {
    flex-basis: calc(50% - 20px);
  }
}

@media (min-width: 1920px) {
  .service-card {
    flex-basis: calc(33.33% - 20px);
  }
}

@media (min-width: 2560px) {
  .service-card {
    flex-basis: calc(20% - 20px);
  }
}
</style>