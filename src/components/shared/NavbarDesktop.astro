---
import { type SidebarProps } from 'webcoreui/astro';
import { Image } from 'astro:assets';

import Icons from '@assets/navbar';
import LogoText from '@assets/navbar/logo-vertical.png';

const currentPath = Astro.url.pathname;

const sidebarProps: SidebarProps = {
  groups: [
    {
      items: [
        {
          name: 'Inicio',
          href: '/',
          icon: Icons.home,
          active: currentPath === '/',
        },
        {
          name: 'Servicios',
          href: '/servicios',
          icon: Icons.services,
          active: currentPath === '/servicios',
        },
        {
          name: 'Wedding Planner',
          href: '/wedding-planner',
          icon: Icons.info,
          active: currentPath === '/wedding-planner',
        },
        {
          name: 'Contacto',
          href: '/contacto',
          icon: Icons.contact,
          active: currentPath === '/contacto',
        },
      ],
    },
  ],
};
---

<!-- Navbar for Desktop -->
<nav
  class="hidden lg:sticky lg:flex top-0 bg-white lg:flex-row justify-between items-center z-50 px-[2rem] shadow-lg py-1"
>
  <div class="flex flex-col justify-center w-full !gap-1">
    <div class="flex justify-center">
      <Image src={LogoText} alt="Logo" class="h-[75px] w-auto" />
    </div>
    <div
      class="flex flex-row justify-center items-center !gap-x-[3rem] basis-[80%]"
    >
      {
        sidebarProps.groups[0].items.map((link) => (
          <a
            class:list={[
              'link transition-all duration-300 hover:text-teal-700 font-cinzel',
              link.active && 'text-teal-700 font-semibold',
            ]}
            href={link.href}
          >
            {link.name}
          </a>
        ))
      }
    </div>
  </div>
