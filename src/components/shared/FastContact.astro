---
interface Props {
  title?: string;
  formText?: string;
}

const { title, formText } = Astro.props;
---

<section data-aos="fade-in" class="relative flex flex-col justify-center">
  {
    title && (
      <div class="flex flex-col items-center justify-center !gap-4 my-2">
        <h1 class="text-center text-3xl md:text-4xl lg:text-5xl font-bold mb-4 cursor-pointer hover:text-teal-600">
          {title}
        </h1>
      </div>
    )
  }

  {
    formText && (
      <div class="flex flex-col items-center justify-center ">
        <a
          id="fast-contact"
          href="/contacto"
          aria-label={formText}
          class="font-cinzel underline text-xl lg:text-2xl text-center cursor-pointer hover:text-teal-600 transition-colors duration-300"
        >
          {formText}
        </a>
      </div>
    )
  }
</section>

