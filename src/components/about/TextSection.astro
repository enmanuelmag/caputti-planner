---
import Divider from '@components/shared/Divider.astro';
import type { AstroComponentFactory } from 'astro/runtime/server/index.js';

interface Props {
  title: string;
  subtitle?: string;
  Content: AstroComponentFactory;
}

const { title, subtitle, Content } = Astro.props as Props;
---

<article>
  <div
    class="flex flex-col justify-center !gap-x-[1rem] px-[1rem] lg:!gap-0 lg:px-0"
  >
    <Divider
      aria-label={title}
      text={title}
      className="text-2xl lg:text-[2rem] font-[100] text-center leading-10 my-[2rem] hover:text-teal-500 transition-colors duration-500 cursor-default"
    />
    {
      subtitle && (
        <p
          aria-label={subtitle}
          class="text-center text-lg lg:text-xl font-[300] text-gray-500"
        >
          {subtitle}
        </p>
      )
    }
    <div class="prose text-center !max-w-full">
      <Content />
    </div>
  </div>
</article>
