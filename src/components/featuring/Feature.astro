---
interface Props {
  text: string;
  index: number;
  total: number;
}

const { text, index: idx, total } = Astro.props;

const index = idx + 1;

const idxNumber =
  index % 2 === 0 ? total / 2 + index / 2 : Math.floor(index / 2 + 1);
---

<article class="flex justify-start basis-full lg:basis-1/2 px-[1rem] py-[1rem]">
  <div class="flex flex-row justify-start items-start">
    <p
      id={`feature-${idxNumber}`}
      aria-label={text}
      class="!text-justify text-sm md:text-base lg:text-lg xl:text-xl hover:text-teal-600 transition-colors duration-300 cursor-default"
    >
      <span
        class="!font-bold font-sansserif hover:text-teal-600 transition-colors duration-300"
        >0{idxNumber}.</span
      >
      {text}
    </p>
  </div>
</article>
