---
import TransText from '@components/shared/TransText.astro';

interface Props {
  text: string;
  index: number;
  total: number;
}

const { text, index: idx, total } = Astro.props;

const index = idx + 1;

// Desktop: números alternantes en dos columnas
const idxNumber =
  index % 2 === 0 ? total / 2 + index / 2 : Math.floor(index / 2 + 1);

// Mobile: números secuenciales (1, 2, 3, ...)
const sequentialNumber = idx + 1;
---

<article
  class="flex justify-start basis-full lg:basis-1/2 lg:px-[1rem] py-[0.5rem] lg:py-[1rem]"
>
  <div class="flex flex-row justify-start items-start">
    <p
      id={`feature-${idxNumber}`}
      aria-label={text}
      class="!text-justify hover:text-caputi transition-colors duration-300 cursor-default"
    >
      {/* Mobile: número secuencial */}
      <TransText
        tag="span"
        literal={`0${sequentialNumber}. ${text}`}
        class="lg:hidden font-krub hover:text-caputi transition-colors duration-300"
      />
      {/* Desktop: número alternante */}
      <TransText
        tag="span"
        literal={`0${idxNumber}. ${text}`}
        class="hidden lg:inline font-krub hover:text-caputi transition-colors duration-300"
      />
    </p>
  </div>
</article>
