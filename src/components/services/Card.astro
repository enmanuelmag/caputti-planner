---
interface Props {
  title: string;
  description: string;
  slug: string;
  image: string;
}

const { title, description, image, slug } = Astro.props;
---

<article class="rounded-lg shadow-lg bg-orange-200">
  <img
    src={image}
    alt={title}
    class="w-full h-[200px] object-cover rounded-t-lg"
  />
  <div class="p-4">
    <h2 class="text-xl font-bold">{title}</h2>
    <p class="text-sm mt-2 prose">{description}</p>
  </div>

  <a
    href={`/services/${slug}`}
    class="block p-4 bg-orange-300 text-center rounded-b-lg"
  >
    Ver m√°s
  </a>
</article>
