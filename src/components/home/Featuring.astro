---
import Feature from '@components/featuring/Feature.astro';
import TransText from '@components/shared/TransText.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export const prerender = true;

const features = t('featuring.items').split('|');
---

<section
  data-aos="fade-up"
  data-aos-offset="10"
  class="relative mx-4 lg:mx-16 xl:mx-44 2xl:mx-96 flex flex-col items-center"
>
  <TransText tag="h2" textId="featuring.title" class="text-center" />

  <div class="flex flex-row flex-wrap justify-center !gap-0">
    {
      features.map((feature, index) => (
        <Feature index={index} text={feature} total={features.length} />
      ))
    }
  </div>
</section>
