---
import TransText from '@components/shared/TransText.astro';

import CoupleImage from '@assets/testimonials/couple.jpg';
import { Image } from 'astro:assets';

export const prerender = true;
---

<section
  data-aos="fade-up"
  class="relative mx-[0.5rem] flex flex-col items-center"
>
  <TransText
    tag="h1"
    textId="testimonials.title"
    class="font-[100] text-center leading-10 my-[2rem]"
  />

  <div class="w-full flex flex-col justify-center items-center !gap-1">
    <TransText
      tag="p"
      textId="testimonials.subtitle.p1"
      class="prose text-center !font-cinzel !text-2xl !max-w-[110ch]"
    />
    <TransText
      tag="p"
      textId="testimonials.subtitle.p2"
      class="prose text-center !font-cinzel !text-2xl !max-w-[110ch]"
    />
  </div>

  <div class="flex flex-col items-center justify-center !gap-16 mt-12">
    <TransText
      tag="h2"
      textId="testimonials.couple.title"
      class="!text-4xl text-center"
    />

    <Image
      src={CoupleImage}
      alt="Pareja feliz"
      class="rounded-[4rem] shadow-2xl w-[300px] aspect-square"
      loading="lazy"
    />

    <TransText
      tag="a"
      href="/testimonios"
      textId="testimonials.more"
      class="text-center prose underline !text-2xl cursor-pointer"
    />
  </div>
</section>
