---
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export const prerender = true;
---

<section class="relative mb-[2rem] lg:mb-[6rem] mx-[0.5rem]">
  <h1
    id="testimonials-title"
    aria-label={t('testimonials.title')}
    class="text-2xl lg:text-[2rem] font-[100] text-center leading-10 my-[2rem]"
  >
    {t('testimonials.title')}
  </h1>

  <div class="w-full flex justify-center mb-[4rem]">
    <p
      id="testimonials-subtitle"
      aria-label={t('testimonials.subtitle')}
      class="prose text-center"
    >
      {t('testimonials.subtitle')}
    </p>
  </div>
</section>
