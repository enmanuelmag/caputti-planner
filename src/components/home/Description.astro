---
import TransText from '@components/shared/TransText.astro';

// lg:mx-24 xl:mx-56
---

<section
  data-aos="fade-up"
  data-aos-offset="0"
  data-aos-delay="0"
  class="relative mx-4 md:mx-0 !gap-y-4 lg:!gap-y-10 flex flex-col"
>
  <div class="w-full flex flex-col justify-center items-center !gap-y-3">
    <TransText
      tag="h2"
      textId="description.title.first"
      class="font-[100] text-center leading-10 hidden sm:block"
    />

    <div class="flex flex-col !gap-0 sm:!hidden">
      <TransText
        tag="h2"
        textId="description.title.first.1.mobile"
        class="font-[100] text-center leading-10"
      />
      <TransText
        tag="h2"
        textId="description.title.first.2.mobile"
        class="font-[100] text-center leading-10"
      />
    </div>

    <TransText
      tag="h2"
      textId="description.subtitle.first"
      class="text-center font-alexbrush"
    />
  </div>

  <div class="w-full flex flex-col justify-center items-center">
    <TransText tag="h1" textId="description.title.second" class="text-center" />

    <div class="flex flex-col justify-center items-center !gap-y-0 w-full">
      <TransText
        tag="p"
        textId="description.subtitle.second.p1"
        class="prose text-center !max-w-full"
      />

      <TransText
        tag="p"
        textId="description.subtitle.second.p2"
        class="prose text-center max-w-[100ch]"
      />

      <TransText
        tag="p"
        textId="description.subtitle.second.p3"
        class="prose text-center"
      />
    </div>
  </div>
</section>
