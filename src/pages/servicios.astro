---
import Layout from '../layouts/Layout.astro';

import Services from '@components/services/Services.astro';
import FastContact from '@components/shared/FastContact.astro';

import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Servicios - Caputi Festa">
  <Services />

  <div class="mt-16 lg:mt-32">
    <FastContact
      title={t('services.contact.title')}
      hrefTitle="/faq"
      formText={t('services.contact.subtitle')}
    />
  </div>
</Layout>
