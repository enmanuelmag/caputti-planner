---
import LayoutHome from 'src/layouts/LayoutHome.astro';

import Hero from '@components/home/Hero.astro';
import Description from '@components/home/Description.astro';
import Services from '@components/home/Services.astro';
import Testimonials from '@components/home/Testimonials.astro';
import Featuring from '@components/home/Featuring.astro';
import FastContact from '@components/shared/FastContact.astro';

import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<LayoutHome title="Caputi Festa">
  <Hero />

  <Description />

  <Services />

  <Testimonials />

  <Featuring />

  <FastContact text={t('contact.button')} />
</LayoutHome>

<style lang="scss" is:global>
  //@import './webcoreui/styles';
  @use 'webcoreui/styles' as *;

  @include setup(
    (
      fontRegular: '/fonts/Inter-Regular.woff2',
      fontBold: '/fonts/Inter-Bold.woff2',
      includeResets: false,
      includeTooltip: true,
      includeUtilities: true,
      includeScrollbarStyles: false,
      theme: 'light',
    )
  );

  @font-face {
    font-family: 'AlexBrush';
    font-style: normal;
    font-weight: 400;
    src: url('/fonts/AlexBrush-Regular.ttf') format('truetype');
  }

  @font-face {
    font-family: 'Cinzel';
    font-style: normal;
    font-weight: 400;
    src: url('/fonts/Cinzel-VariableFont_wght.ttf') format('truetype');
  }

  @font-face {
    font-family: 'Krub';
    font-style: normal;
    font-weight: 400;
    src: url('/fonts/Krub-Regular.ttf') format('truetype');
  }

  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    src: url('/fonts/Inter-Regular.woff2') format('woff2');
  }

  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 700;
    src: url('/fonts/Inter-Bold.woff2') format('woff2');
  }

  html {
    background: #ffffff;
    scroll-behavior: smooth;
    font-family: system-ui, sans-serif;
  }

  h1 {
    font-family: 'AlexBrush';
    font-size: 4.5rem !important;
    line-height: 1.2 !important;
  }

  h2 {
    font-family: 'Cinzel';
    font-size: 1.5rem !important;
    line-height: 1.2 !important;
  }

  h3 {
    font-size: 1.25rem !important;
    line-height: 1.2 !important;
  }

  h4 {
    font-size: 1.125rem !important;
    line-height: 1.2 !important;
  }

  h5 {
    font-size: 1rem !important;
    line-height: 1.2 !important;
  }

  h6 {
    font-size: 0.875rem !important;
    line-height: 1.2 !important;
  }

  p {
    font-family: 'Krub';
    font-size: 1rem !important;
    line-height: 1.5 !important;
  }
</style>

<script>
  import AOS from 'aos';

  AOS.init({
    delay: 100,
    once: false,
    offset: 300,
    duration: 1250,
    //easing: 'ease-in-cubic',
  });
</script>
