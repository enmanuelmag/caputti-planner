---
import { Image } from 'astro:assets';

import { getLangFromUrl, useTranslations } from '@i18n/utils';

import LayoutHome from 'src/layouts/LayoutHome.astro';

import Hero from '@components/home/Hero.astro';
import Services from '@components/home/Services.astro';
import Featuring from '@components/home/Featuring.astro';
import Description from '@components/home/Description.astro';
import Testimonials from '@components/home/Testimonials.astro';

import TransText from '@components/shared/TransText.astro';
import ImageDescription from '@assets/description/description.jpg';
import FastContact from '@components/shared/FastContact.astro';

export const prerender = true;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<LayoutHome title="Caputi Festa">
  <Hero />

  <Description />

  <section
    data-aos="fade-up"
    data-aos-offset="10"
    data-aos-delay="0"
    class="relative flex flex-col items-center"
  >
    <Image
      src={ImageDescription}
      alt={t('description.subtitle.second.p1')}
      class="w-full h-[200px] md:h-[450px] xl:h-[700px] object-cover object-center"
    />
  </section>

  <Services />

  <Testimonials />

  <Featuring />

  <section
    class="flex flex-col items-center justify-center !gap-4 mt-16"
    data-aos="fade-up"
    data-aos-offset="10"
  >
    <TransText tag="h1" textId="contact.button" class="" />

    <FastContact formText={t('contact.subtitle')} />
  </section>
</LayoutHome>
